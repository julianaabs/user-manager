{%  extends '/templates/default.twig' %}
{%  block content %}
    <form id="update-form" action="{{ path_for('update') }}" method="post" >
        <div class="container">
            <h1>Edit data</h1>
            <hr>

            <div class="form-group">
                <label for="name"><b>Name</b></label>
                <input type="text" class="form-control" {{ user.name }} placeholder="{{ user.name }}" name="name" id="name">
            </div>

            <div class="form-group">
                <label for="email"><b>Email</b></label>
                <input type="text" class="form-control" value="{{ user.email }}" placeholder="{{ user.email }}" name="email" id="email">
            </div>


            <button type="submit" form="update-form" class="btn btn-primary">Edit</button>
            <input type="hidden" name="{{csrf.keys.name}}" value="{{csrf.name}}">
            <input  type="hidden" name="{{csrf.keys.value}}" value="{{csrf.value}}">

        </div>
    </form>
{% endblock %}