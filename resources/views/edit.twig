{%  extends '/templates/default.twig' %}
{%  block content %}
    <form id="login-form" action="{{ url_for('update') }}" >
        <div class="container">
            <h1>Edit data</h1>
            <hr>

            <div class="form-group">
                <label for="email"><b>Email</b></label>
                <input type="text" class="form-control" placeholder="{{ user.email }}" name="email" id="email" disabled>
            </div>

            <div class="form-group">
                <label for="password"><b>Password</b></label>
                <input type="password" class="form-control" placeholder="Enter New Password" name="password" id="password" >
            </div>

            <div class="form-group">
                <label for="psw-repeat"><b>Password Confirmation</b></label>
                <input type="password" class="form-control" placeholder="Confirm Password" name="psw-repeat" id="psw-repeat" >
            </div>


            <button type="submit" form="login-form" class="btn btn-primary">Edit</button>
            <input type="hidden" name="{{csrf.keys.name}}" value="{{csrf.name}}">
            <input  type="hidden" name="{{csrf.keys.value}}" value="{{csrf.value}}">

        </div>
    </form>
{% endblock %}