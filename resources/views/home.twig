{%  extends '/templates/default.twig' %}
{%  block content %}
    <form id="user-form" action="{{ url_for('create-user') }}" method="post" style="border:1px solid #ccc">
        <div class="container">
            <h1>Sign Up</h1>
            <p>Please fill in this form to create an account.</p>
            <hr>

            <div class="form-group">
                <label for="name"><b>Name</b></label>
                <input type="text" placeholder="Your Name" name="name" id="name" required>
            </div>

            <div class="form-group">
                <label for="email"><b>Email</b></label>
                <input type="text" placeholder="Your Email" name="email" id="email" required>
            </div>

            <div class="form-group">
                <label for="password"><b>Password</b></label>
                <input type="password" placeholder="Enter Password" name="password" id="password" required>
            </div>

            <div class="form-group">
                <label for="psw-repeat"><b>Repeat Password</b></label>
                <input type="password" placeholder="Repeat Password" name="psw-repeat" id="psw-repeat" required>
            </div>


            <button type="button" class="cancelbtn">Cancel</button>
            <button type="submit" form="user-form" class="btn btn-default">Sign Up</button>

        </div>
    </form>
{% endblock %}