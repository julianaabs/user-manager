{%  extends '/templates/default.twig' %}
{%  block content %}
    <form id="login-form" action="{{ path_for('login') }}" method="post">
        <div class="container">
            <h1>Login</h1>
            <hr>

            <div class="form-group">
                <label for="email"><b>Email</b></label>
                <input type="text" class="form-control" placeholder="Your Email" name="email" id="email" required>
            </div>

            <div class="form-group">
                <label for="password"><b>Password</b></label>
                <input type="password" class="form-control" placeholder="Enter Password" name="password" id="password" required>
            </div>


            <button type="submit" form="login-form" class="btn btn-primary">Login</button>
            <input type="hidden" name="{{csrf.keys.name}}" value="{{csrf.name}}">
            <input  type="hidden" name="{{csrf.keys.value}}" value="{{csrf.value}}">

        </div>
    </form>
{% endblock %}